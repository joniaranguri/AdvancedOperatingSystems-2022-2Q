<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sabi_background"
    android:padding="20dp"
    tools:context=".view.PairActivity">

    <TextView
        android:id="@+id/pair_activity_bt_state_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bluetooth_not_activated"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/pair_activity_activate_bt_btn" />

    <Button
        android:id="@+id/pair_activity_activate_bt_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/activate_bluetooth"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/pair_activity_search_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/search_devices"
        app:layout_constraintTop_toBottomOf="@id/pair_activity_activate_bt_btn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:enabled="false"/>

</androidx.constraintlayout.widget.ConstraintLayout>